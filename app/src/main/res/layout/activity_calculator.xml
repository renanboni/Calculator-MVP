<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/root_activity_calculator"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.renan.calculator.CalculatorActivity">

    <fragment
        android:id="@+id/frag_display"
        android:name="com.example.renan.calculator.DisplayFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:layout="@layout/fragment_display" />

    <fragment
        android:id="@+id/frag_input"
        android:name="com.example.renan.calculator.InputFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/frag_display"
        tools:layout="@layout/fragment_input"/>
</RelativeLayout>
